<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        style="@style/llStyleMain">
        <TextView
            android:id="@+id/tvDayDetail"
            style="@style/tvStyleHeader"
            android:text="Sunday"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDetailChest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_video"
            style="@style/tvStyleContent"
            android:text="Chest"/>
        <TextView
            android:id="@+id/tvDetailBiceps"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_video"
            style="@style/tvStyleContent"
            android:text="Biceps"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDetailShoulder"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_video"
                style="@style/tvStyleContent"
                android:text="Shoulder"/>
            <TextView
                android:id="@+id/tvDetailTriceps"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_video"
                style="@style/tvStyleContent"
                android:text="Triceps"/>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>
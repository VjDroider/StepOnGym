<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    android:background="@drawable/bnrone"
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PaidDetailActivity"        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                style="@style/llStyleMain">
                <TextView
                    android:id="@+id/tvPaidDetailTitle"
                    style="@style/tvStyleHeader"
                    android:fontFamily="serif-monospace"
                    android:text="Title"/>
                <TextView
                    android:id="@+id/tvPaidDetailDetail"
                    style="@style/tvStyleContent"
                    android:text="Detail" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

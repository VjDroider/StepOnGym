<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bnrone"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarDetail"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
            <TextView
                android:id="@+id/tvDetailToolbar"
                android:text="Detail"
                android:textColor="@color/white"
                style="@style/tvStyleHeader"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:layout_below="@+id/appbarDetail"-->
        <!--android:id="@+id/rvDetail"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>
        -->
    <ScrollView
        android:layout_below="@id/appbarDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvDaySunday"
        style="@style/tvStyleDay"
        android:fontFamily="serif-monospace"
        android:text="Sunday"/>
    <TextView
        android:id="@+id/tvDayMonday"
        style="@style/tvStyleDay"
        android:fontFamily="serif-monospace"
        android:text="Monday"/>
    <TextView
        android:id="@+id/tvDayTuesday"
        style="@style/tvStyleDay"
        android:fontFamily="serif-monospace"
        android:text="Tuesday"/>
    <TextView
        android:id="@+id/tvDayWednesday"
        style="@style/tvStyleDay"
        android:fontFamily="serif-monospace"
        android:text="Wednesday"/>
    <TextView
        android:id="@+id/tvDayThursday"
        style="@style/tvStyleDay"
        android:fontFamily="serif-monospace"
        android:text="Thursday"/>
    <TextView
        android:id="@+id/tvDayFriday"
        style="@style/tvStyleDay"
        android:fontFamily="serif-monospace"
        android:text="Friday"/>
    <TextView
        android:id="@+id/tvDaySaturday"
        style="@style/tvStyleDay"
        android:fontFamily="serif-monospace"
        android:text="Saturday"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
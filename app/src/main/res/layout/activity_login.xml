<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activity.Login">


    <ImageView
        android:layout_width="270dp"
        android:layout_height="250dp"
        android:layout_gravity="center"

        android:src="@drawable/logos" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_email_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#0fbbf1"
                android:ems="10"
                android:gravity="center"
                android:hint=" Email"

                android:textColor="@color/white"

                android:textColorHint="@color/magneta"
                android:textColorLink="#00424141" />


            <EditText

                android:id="@+id/et_pass_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#6CAEE0"
                android:ems="10"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/magneta"
                android:textColorLink="#00424141" />


            <Button
                android:id="@+id/btn_log"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom"
                android:onClick="onclick"
                android:text="LOGIN"
                android:textColor="@color/white" />


            <TextView

                android:id="@+id/tv_log_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Create a new account ? "
                android:textColor="@color/white"
                android:textSize="12dp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>